{% extends 'base.html.twig' %}



{% block title %}Abonnement{% endblock %}

{% block body %}
<h1 class="text-center my-3 display-5 ">Abonnement</h1>
    <a class="btn btn-success mb-3" href="{{ path('app_abonnement_new') }}">Ajouter</a>
    <div class="table-responsive">
    <table id="table" class="table table-striped table-hover table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Prix</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for abonnement in abonnements %}
            <tr>
                <td>{{ abonnement.id }}</td>
                <td>{{ abonnement.libelle }}</td>
                <td>{{ abonnement.prix }}</td>
                <td>{{ abonnement.description }}</td>
                <td>
                    <a class="btn btn-secondary mb-2" href="{{ path('app_abonnement_show', {'id': abonnement.id}) }}">Afficher</a>
                    <a class="btn btn-warning" href="{{ path('app_abonnement_edit', {'id': abonnement.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun résultat trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

    
{% endblock %}
