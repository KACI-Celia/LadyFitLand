{% extends 'base.html.twig' %}


{% block title %}Abonnement{% endblock %}

{% block body %}
<h1 class="text-center my-3 display-5">Abonnements</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ abonnement.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ abonnement.libelle }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ abonnement.prix }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ abonnement.description }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-dark mb-2" href="{{ path('app_abonnement_index') }}">Retour</a>

    <a class="btn btn-warning mb-2" href="{{ path('app_abonnement_edit', {'id': abonnement.id}) }}">Modifier</a>

    {{ include('abonnement/_delete_form.html.twig') }}
{% endblock %}
