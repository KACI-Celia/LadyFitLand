{% extends 'base.html.twig' %}

{% block title %}Reservations index{% endblock %}

{% block body %}
    <h1>Reservations index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>LibelleReservation</th>
                <th>HeureDebut</th>
                <th>HeureFin</th>
                <th>JourDebut</th>
                <th>JourFin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.libelleReservation }}</td>
                <td>{{ reservation.heureDebut }}</td>
                <td>{{ reservation.heureFin }}</td>
                <td>{{ reservation.jourDebut }}</td>
                <td>{{ reservation.jourFin }}</td>
                <td>
                    <a href="{{ path('app_reservations_show', {'id': reservation.id}) }}">show</a>
                    <a href="{{ path('app_reservations_edit', {'id': reservation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reservations_new') }}">Create new</a>
{% endblock %}
