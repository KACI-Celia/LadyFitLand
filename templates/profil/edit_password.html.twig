{% extends 'base.html.twig' %}

{% block title %}Modifier mon mot de passe{% endblock %}

{% block body %}
    <h1 class="text-center my-3 display-5 ">Modifier mon mot de passe</h1>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 mx-auto">
                {{ form_start(form) }}
                    <div class="mb-3">
                        <label for="edit_user_password_form_currentPassword">Mot de passe actuel</label>
                        <div class="text-danger">{{form_errors(form.currentPassword)}}</div>
                        {{ form_widget(form.currentPassword)}}
                    </div>
                    <div class="mb-3">
                        <label for="edit_user_password_form_plainPassword_first">Nouveau mot de passe</label>
                        <div class="text-danger">{{form_errors(form.plainPassword.first)}}</div>
                        {{ form_widget(form.plainPassword.first,{'attr':{ 'placeholder':"Le mot de passe doit contenir 14 caractères avec 1 majuscule, 1 minuscule, 1 chiffre, 1 caractère spécial."}}) }}
                        <small><em>Le mot de passe doit contenir 14 caractères avec 1 majuscule, 1 minuscule, 1 chiffre, 1 caractère spécial.</em></small>
                    </div>
                    <div class="mb-3">
                        <label for="edit_user_password_form_plainPassword_second">Confirmation du nouveau mot de passe</label>
                        <div class="text-danger">{{form_errors(form.plainPassword.second)}}</div>
                        {{ form_widget(form.plainPassword.second) }}
                    </div>
                    <div>
                        <input type="submit" value="Modifier le mot de passe" class="btn btn-primary">
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}