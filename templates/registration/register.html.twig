{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1 class="text-center my-3 display-5">Inscription</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
                <div class="form-group shadow p-3 mb-5 bg-white rounded">
                    {{ form_row(registrationForm.prenomUser, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Prénom'}}) }}
                    {{ form_row(registrationForm.nomUser, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Nom'}}) }}
                    {{ form_row(registrationForm.email, {'attr': {'class': 'form-control mb-3', 'placeholder': 'E-mail'}}) }}
                    {{ form_row(registrationForm.telUser, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Numéro de téléphone'}}) }}
                    {{ form_row(registrationForm.dateNaissanceUser, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Date de naissance'}}) }}
                   
                </div>
            </div>
        
            <div class="col-md-6">
                <div class="form-group shadow p-3 mb-5 bg-white rounded">
                    {{ form_row(registrationForm.adresseUser, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Adresse'}}) }}
                    {{ form_row(registrationForm.zipcode, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Code postal'}}) }}
                    {{ form_row(registrationForm.city, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Ville'}}) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe',
                        'attr': {'class': 'form-control mb-3', 'placeholder': 'Mot de passe'}
                    }) }}
                    {{ form_row(registrationForm.agreeTerms) }}
                </div>
                <button type="submit" class="btn btn-primary">Inscription</button>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
