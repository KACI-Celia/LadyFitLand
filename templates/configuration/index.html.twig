{% extends 'base.html.twig' %}

{% block title %}Configuration index{% endblock %}

{% block body %}
    <h1>Configuration index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomSalle</th>
                <th>TelSalle</th>
                <th>EmailSalle</th>
                <th>AdresseSalle</th>
                <th>HeureOuverture</th>
                <th>HeureFermeture</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for configuration in configurations %}
            <tr>
                <td>{{ configuration.id }}</td>
                <td>{{ configuration.nomSalle }}</td>
                <td>{{ configuration.telSalle }}</td>
                <td>{{ configuration.emailSalle }}</td>
                <td>{{ configuration.adresseSalle }}</td>
                <td>{{ configuration.heureOuverture ? configuration.heureOuverture|date('H:i:s') : '' }}</td>
                <td>{{ configuration.heureFermeture ? configuration.heureFermeture|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_configuration_show', {'id': configuration.id}) }}">show</a>
                    <a href="{{ path('app_configuration_edit', {'id': configuration.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_configuration_new') }}">Create new</a>
{% endblock %}
