{% extends 'base.html.twig' %}
{% block h1 %}
    <h1 class="text-center text-primary my-4">Gestion des cours</h1>
{% endblock %}

{% block body %}
<div class="container">
    </div>
    <div class="table-responsive">
    <table id="table" class="table table-striped table-hover table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>LibCours</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>HeureDebut</th>
                <th>HeureFin</th>
                <th>QuantiteParticipant</th>
                <th>Coach</th>
                <th>Instructions</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cour in cours %}
            <tr>
                <td>{{ cour.id }}</td>
                <td>{{ cour.libCours }}</td>
                <td>{{ cour.dateDebut }}</td>
                <td>{{ cour.dateFin }}</td>
                <td>{{ cour.heureDebut }}</td>
                <td>{{ cour.heureFin }}</td>
                <td>{{ cour.quantiteParticipant }}</td>
                <td>{{ cour.coach }}</td>
                <td>{{ cour.instructions }}</td>
                <td>
                    <a class="btn btn-primary mb-2 mt-2" href="{{ path('app_cours_new') }}">Ajouter</a>
                    <a class="btn btn-secondary mb-2 mt-2" href="{{ path('app_cours_show', {'id': cour.id}) }}">Afficher</a>
                    <a class="btn btn-warning mb-2 mt-2" href="{{ path('app_cours_edit', {'id': cour.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Pas de résultat trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

   


    <div id="calendrier"></div>
{% endblock %}