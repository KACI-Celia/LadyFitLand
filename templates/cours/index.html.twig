{% extends 'base.html.twig' %}

{% block title %}
Gestion des cours

{% endblock %}

{% block stylesheets %}
{#lien main.min.css depuis FullCalendar#}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.0/main.min.css" integrity="sha256-16PDMvytZTH9heHu9KBPjzrFTaoner60bnABykjNiM0=" crossorigin="anonymous">
        <style>
            #calendrier{

            }
        
        </style>

{% endblock %}

{% block body %}
<div class="container">
    <h1>Gestion des cours</h1>
    </div>
    <div class="table-responsive">
    <table id="table" class="table table-striped table-hover table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>LibCours</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>HeureDebut</th>
                <th>HeureFin</th>
                <th>QuantiteParticipant</th>
                <th>Coach</th>
                <th>Instructions</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cour in cours %}
            <tr>
                <td>{{ cour.id }}</td>
                <td>{{ cour.libCours }}</td>
                <td>{{ cour.dateDebut }}</td>
                <td>{{ cour.dateFin }}</td>
                <td>{{ cour.heureDebut }}</td>
                <td>{{ cour.heureFin }}</td>
                <td>{{ cour.quantiteParticipant }}</td>
                <td>{{ cour.coach }}</td>
                <td>{{ cour.instructions }}</td>
                <td>
                    <a class="btn btn-secondary mb-2" href="{{ path('app_cours_show', {'id': cour.id}) }}">Afficher</a>
                    <a class="btn btn-warning" href="{{ path('app_cours_edit', {'id': cour.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Pas de résultat trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

    <a class="btn btn-success" href="{{ path('app_cours_new') }}">Ajouter</a>


    <div id="calendrier"></div>
{% endblock %}

{% block javascripts %} {#CDN main.js despuis fullCalendar#}
			
{#fullCaledar backOffice#}
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.0/main.min.js" integrity="sha256-PL1mKrYeZkM5SsJ5nydN6463HLkV918bgDdYL0I5Z+k=" crossorigin="anonymous"></script>
                <script>

                window.onload = () => {

                    let calendrier = document.getElementById('calendrier');

                    console.log(calendrier);

                    let calendar = new FullCalendar.Calendar(calendrier, {

                        firstDay:1,
                        initialView: 'timeGridWeek',
                        nowIndicator: true,
                        locale: 'fr',
                        timeZone: 'Europe/Paris',
                        headerToolbar: {
                            start: 'prev, next today',
                            center: 'title',
                            end: 'dayGridMonth, timeGridWeek'
                        },
                        slotMinTime: '06:00:00',
                        slotMaxTime: '23:00:00',
                        businessHours: [ // specify an array instead
                            {
                                daysOfWeek: [ 1, 2, 4,5 ], // Monday, Tuesday, Wednesday
                                startTime: '08:00', // 8am
                                endTime: '20:00' // 6pm
                            },
                            {
                                daysOfWeek: [ 3 ], // Thursday, Friday
                                startTime: '9:00', // 10am
                                endTime: '21:00' // 4pm
                            }
                        ],
                        // events: 


                    });

                    calendar.render();


                }
                
                
                </script>
{% endblock %}

