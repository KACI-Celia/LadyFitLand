{% extends 'base.html.twig' %}

{% block title %}Cours{% endblock %}

{% block body %}
    <h1>Cours</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cour.id }}</td>
            </tr>
            <tr>
                <th>LibCours</th>
                <td>{{ cour.libCours }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ cour.dateDebut }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ cour.dateFin }}</td>
            </tr>
            <tr>
                <th>HeureDebut</th>
                <td>{{ cour.heureDebut }}</td>
            </tr>
            <tr>
                <th>HeureFin</th>
                <td>{{ cour.heureFin }}</td>
            </tr>
            <tr>
                <th>QuantiteParticipant</th>
                <td>{{ cour.quantiteParticipant }}</td>
            </tr>
            <tr>
                <th>Coach</th>
                <td>{{ cour.coach }}</td>
            </tr>
            <tr>
                <th>Instructions</th>
                <td>{{ cour.instructions }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-dark" href="{{ path('app_cours_index') }}">Retour</a>

    <a class="btn btn-warning" href="{{ path('app_cours_edit', {'id': cour.id}) }}">Modifier</a>

    {{ include('cours/_delete_form.html.twig') }}
