<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}LadyFitLand{% endblock %}</title>
    <!-- Lien CDN de Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- Lien avec le thème Bootswatch -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.3/dist/cerulean/bootstrap.min.css" integrity="sha256-qR01fmz4XOCNC3dVfO+qjS6hX2BbJjqGD8WGd5sG19o=" crossorigin="anonymous">
    <!-- Lien vers votre fichier CSS personnalisé -->
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="{{ path('page_principale') }}">LadyFitLand</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('type_abonnement') }}">Abonnements</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('espaces_salle') }}">Espaces</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    {% if app.user %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <!-- PARTIE ADMIN -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Dashboard
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="{{ path('app_user_index') }}">Gestion des utilisateurs</a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_profil_index') }}">Gestion du profil</a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_abonnement_index') }}">Gestion des Abonnements</a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_espaces_admin_index') }}">Gestion des espaces</a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_cours_index') }}">Gestion des cours</a></li>
                                </ul>
                            </li>
                        {% endif %}
                        <!-- Si l'utilisateur est connecté -->
                        <li class="nav-item"><a class="nav-link active" href="{{ path('app_profil_index') }}">Mon profil</a></li>
                        <li class="nav-item"><a class="nav-link active" href="{{ path('app_reservation') }}">Mes cours</a></li>
                        <li class="nav-item"><a class="nav-link active" href="{{ path('app_logout') }}">Déconnexion</a></li>
                    {% else %}
                        <!-- Interface User non connecté -->
                        <li class="nav-item">
							<a class="nav-link active" href="{{ path('app_register') }}">Inscription</a>
						</li>
                        <li class="nav-item">
						<a class="nav-link active" href="{{ path('app_login') }}">Connexion</a>
						</li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <main class="col-md-10 col-12 mx-auto py-2">
        {% block h1 %}{% endblock %}
        {% block body %}{% endblock %}
    </main>
	
	<!--Footer-->
    <footer class="footer bg-dark mt-auto p-4 text-center text-white">
        <div class="container">
            <a class="text-white" href="{{ path('app_contact') }}">Contact</a> <br>
            <a class="text-white" href="{{ path('adresse_salle') }}">Adresse de la salle</a>
            <p class="m-0">Mentions légales</p>
        </div>
    </footer>

    <!-- Lien CDN JS de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <!-- Lien vers votre fichier JS personnalisé -->
    <script src="{{ asset('js/script.js') }}"></script>
	<!-- script jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script> 
    {% block javascripts %}{% endblock %}
</body>
</html>
