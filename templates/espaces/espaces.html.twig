        .carousel-item img {
            border-radius: 10px;
            object-fit: cover;
            height: 400px; /* Ajustez la hauteur des images selon vos besoins */
        }

        .carousel-caption {
            background-color: rgba(0, 0, 0, 0.5);
            padding: 20px;
            border-radius: 10px;
        }

        .carousel-caption h5,
        .carousel-caption p {
            color: #fff;
        }

        /* Contrôles du carousel */
        .carousel-control-prev,
        .carousel-control-next {
            color: #fff;
            background-color: rgba(0, 0, 0, 0.3);
            border-radius: 50%;
