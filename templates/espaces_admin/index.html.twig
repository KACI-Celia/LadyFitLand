{% extends 'base.html.twig' %}

{% block title %}Espaces{% endblock %}

{% block body %}
    <h1 class="text-center my-3 display-5">Espaces</h1>

    <div class="table-responsive">
    <table id="table" class="table table-striped table-hover table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>LibelleEspace</th>
                <th>DescriptionEspace</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for espace in espaces %}
            <tr>
                <td>{{ espace.id }}</td>
                <td>{{ espace.libelleEspace }}</td>
                <td>{{ espace.descriptionEspace }}</td>
                <td>
                    <a class="btn btn-primary mt-2" href="{{ path('app_espaces_admin_new') }}">Ajouter</a>
                    <a class="btn btn-secondary mt-2" href="{{ path('app_espaces_admin_show', {'id': espace.id}) }}">Afficher</a>
                    <a class="btn btn-warning mt-2" href="{{ path('app_espaces_admin_edit', {'id': espace.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de r√©sultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
