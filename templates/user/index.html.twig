{% extends 'base.html.twig' %}
{% block h1 %}{% endblock %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>NomUser</th>
                <th>PrenomUser</th>
                <th>TelUser</th>
                <th>DateNaissanceUser</th>
                <th>AdresseUser</th>
                <th>AdresseFacturationUser</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.nomUser }}</td>
                <td>{{ user.prenomUser }}</td>
                <td>{{ user.telUser }}</td>
                <td>{{ user.dateNaissanceUser ? user.dateNaissanceUser|date('Y-m-d') : '' }}</td>
                <td>{{ user.adresseUser }}</td>
                <td>{{ user.adresseFacturationUser }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">Aucun résultat trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {#mettre le code pour banir un user#}
{% endblock %}
